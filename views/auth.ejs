<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cây Gia Phả</title>
    <style>
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            width: 350px;
            position: relative;
            max-width: 90%;
            text-align: center;
        }

        .modal-close {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 24px;
            cursor: pointer;
            color: #666;
            background: none;
            border: none;
            padding: 5px;
        }

        .modal-content img {
            width: 120px;
            height: auto;
            margin-bottom: 20px;
        }

        .modal-content h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        .modal-content input[type="text"],
        .modal-content input[type="email"],
        .modal-content input[type="password"] {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }

        .modal-content input:focus {
            outline: none;
            border-color: #007bff;
        }

        .modal-content .checkbox-container {
            display: flex;
            align-items: center;
            margin: 15px 0;
            font-size: 14px;
        }

        .modal-content .checkbox-container input[type="checkbox"] {
            margin-right: 8px;
        }

        .modal-content button {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 15px;
        }

        .modal-content button:hover {
            background-color: #0056b3;
        }

        .modal-content a {
            color: #007bff;
            text-decoration: none;
        }

        .modal-content a:hover {
            text-decoration: underline;
        }

        .modal-content p {
            margin-top: 15px;
            font-size: 14px;
            color: #666;
        }

        .modal-overlay.active {
            display: flex;
        }
    </style>
</head>
<body>
    <!-- Modal Đăng Nhập -->
    <div id="loginModal" class="modal-overlay">
        <div class="modal-content">
            <span class="modal-close" onclick="closeModal('loginModal')">&times;</span>
            <img src="/images/logo_caygiapha.jpg" alt="Logo">
            <h2>Đăng Nhập</h2>
            <form id="loginForm" onsubmit="handleLogin(event)">
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Mật khẩu" required>
                <div class="checkbox-container">
                    <input type="checkbox" id="remember" name="remember">
                    <label for="remember">Ghi nhớ đăng nhập</label>
                </div>
                <button type="submit">Đăng Nhập</button>
            </form>
            <p style="text-align: right; margin-top: 10px;">
                <a href="#" onclick="forgotPassword()">Quên mật khẩu?</a>
            </p>
            <p>
                Chưa có tài khoản? 
                <a href="#" onclick="showModal('registerModal'); closeModal('loginModal')">Đăng ký ngay</a>
            </p>
        </div>
    </div>

    <!-- Modal Đăng Ký -->
    <div id="registerModal" class="modal-overlay">
        <div class="modal-content">
            <span class="modal-close" onclick="closeModal('registerModal')">&times;</span>
            <img src="/images/logo_caygiapha.jpg" alt="Logo">
            <h2>Đăng Ký</h2>
            <form id="registerForm" onsubmit="handleRegister(event)">
                <input type="text" name="name" placeholder="Họ và tên" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Mật khẩu" required>
                <input type="password" name="confirmPassword" placeholder="Xác nhận mật khẩu" required>
                <div class="checkbox-container">
                    <input type="checkbox" id="terms" name="terms" required>
                    <label for="terms">Tôi đồng ý với <a href="#">Điều khoản sử dụng</a> và <a href="#">Chính sách bảo mật</a></label>
                </div>
                <button type="submit">Đăng Ký</button>
            </form>
            <p>
                Đã có tài khoản? 
                <a href="#" onclick="showModal('loginModal'); closeModal('registerModal')">Đăng nhập</a>
            </p>
        </div>
    </div>

    <script>
        function showModal(modalId) {
            document.getElementById(modalId).classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function forgotPassword() {
            alert('Chức năng đang được phát triển!');
        }

        // Đóng modal khi click ra ngoài
        document.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal-overlay')) {
                event.target.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });
    </script>
</body>
</html>